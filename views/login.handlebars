<div class="row messageContainer">
    <div class="col s12">
        <h5 class="dashMessage">{{this.message}}</h5>
    </div>
</div>

<div class="row container">
    <div class="row">
        <div class="col s12">
            <h4>Please Login</h4>
        </div>
    </div>
    <form class="col s12" method="POST" action="/login">
        <div class="row">
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="email" type="email" class="validate" name="username">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="password" type="password" class="validate" name="password">
                <label for="password">Password</label>
            </div>
            <div class="row">
            <div class="col s12">
                <a href="/signup">Click here to sign up.</a>
            </div>
            </div>
            <div class="col s12">
                <a href="/passwordReset">I forgot my password.</a>
            </div>
        </div>
        <div class="col s12">
        <button class="btn waves-effect waves-light loginSubmitBtn" type="submit">Submit
        </button>
        </div>
    </form>
</div>

<script type="text/javascript" src="./javascript/login.js"></script>