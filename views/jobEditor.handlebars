<div id="mainDiv">
    <h4>Edit Job</h4>
    <form method="POST" action="/editJob">

        <input id='jobIdHidden' type="hidden" name="jobIdHidden" value={{this.id}}>

        <div class="input-field">
            <input id="job_name" type="text" class="validate" name="job_name" value="{{this.job_name}}" required>
            <label for="job_name">Job Name</label>
        </div>

        <!--startDate DATE-->
        <div class="input-field">
            <input name="startDate" id="startDate" type="date" class="datepicker" value='' required>
            <label for="startDate">Click here to select a start date for this job</label>
        </div>

       <input id='startDateHidden' type="hidden" name="startDateHidden" value={{this.startDate}}>

        <!--endDate DATE-->
        <div class="input-field">
            <input name="endDate" id="endDate" type="date" class="datepicker" value="{{this.endDate}}">
            <label for="endDate">End Date (Leave blank if still there)</label>
        </div>

        <!--wage DECIMAL(10,2)-->
        <div class="input-field">
            <input name="wage" id="wage" type="number" step="0.01" class="validate" value="{{this.wage}}" required>
            <label for="wage">Hourly wage</label>
        </div>
    
        <!--userJobMenu JSON would go here-->

        <!--comments MEDIUMBLOB-->
        <div class="input-field">
            <textarea name="comments" id="comments" class="materialize-textarea" required>{{this.comments}}</textarea>
            <label for="comments">Comments</label>
        </div>

        <button class="btn waves-effect waves-light">Edit Job</button>
        <button data-target="modal1" class="btn">Delete Job</button>

    </form>
</div>

<div id="modal1" class="modal">
    <div class="modal-content">
        <h5>Sorry! You can't delete jobs at the moment.</h5>
        <!-- <form action="/deleteJob{{this.id}}?" method="POST"><button class="btn waves-effect waves-light" type="submit">Delete Job</button></form> -->
    </div>
    <button class="btn waves-effect waves-light" onclick="closeModal()">That's lame</button>
</div>

