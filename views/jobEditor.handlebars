<div id="mainDiv"> 
    <div class="row">
        <div class="row">
            <div class="col s12">
                <br><h4>Edit Job</h4>
            </div>
        </div>

        <form class="col s12" method="POST" action="/editJob">

            <input id='jobIdHidden' type="hidden" name="jobIdHidden" value={{this.id}}>

            <div class="row">
                <div class="input-field col s12">
                    <input id="job_name" type="text" class="validate" name="job_name" value={{this.job_name}}>
                    <label for="job_name">Job Name</label>
                </div>
            </div>

            <div class="row">
                <!--startDate DATE-->
                <div class="input-field col s12">
                    <input name="startDate" id="startDate" type="date" class="datepicker" value={{this.startDate}}>
                    <label for="startDate">Click here to select a start date for this job</label>
                </div>
            </div>

            <div class="row">
                <!--endDate DATE-->
                <div class="input-field col s12">
                    <input name="endDate" id="endDate" type="date" class="datepicker" value={{this.endDate}}>
                    <label for="endDate">End Date (Leave blank if still there)</label>
                </div>
            </div>

            <div class="row">
                <!--wage DECIMAL(10,2)-->
                <div class="input-field col s12">
                    <input name="wage" id="wage" type="number" step="0.01" class="validate" value={{this.wage}}>
                    <label for="wage">Hourly wage</label>
                </div>
            </div>
            
            <!--userJobMenu JSON would go here-->

            <div class="row">
                <!--comments MEDIUMBLOB-->
                <div class="input-field col s12">
                    <textarea name="comments" id="comments" class="materialize-textarea">{{this.comments}}</textarea>
                    <label for="comments">Comments</label>
                </div>
            </div>

            <button class="btn waves-effect waves-light">Edit Job
            </button>

            <div class="row">
            </div>
        </form>
        
        <form action="/deleteJob{{this.id}}?" method="POST"><button class="btn waves-effect waves-light" type="submit">Delete Job</button></form>

    </div>
</div>

<script type="text/javascript" src="./javascript/job.js"></script>