<div id="mainDiv">
    <div class="row">
        <div class="col s12">
            <br><h4>Quiz Maker</h4>
        </div>

		{{#unless jobs}}
            <!-- This section only shows when no jobs. -->
            <div class="input-field col s12">
                <h5>To use the flash cards, you must create a job and a menu.
                <a href="/job"><h5>Click here to create a job.</h5></a>
                <a href="javascript:startQuizMaker(9999);"><h5>Click here to try the quiz maker using the Fleming's menu</h5></a>
            </div>
        {{/unless}}

		{{#if jobs}}
		   	<div id="dropdown">
			    <div class="input-field col s12">
			        <select class="jobSelector" onchange="loadMenus(this);">
			            <option value="" disabled>Click here to choose a job</option>
			            <option value="9999" selected>Dummy Job - Fleming's</option>
			            {{#each jobs}}
			                <option value="{{this.id}}" selected>{{this.job_name}}</option>
			            {{/each}}
			        </select>
			        <label>Job Selector</label>
			    </div>
			</div>
		{{/if}}
    </div>
</div>

<div class="container" id="triviaContainer">
	<div class="row" id="messageArea">
	</div>
	<div class="row" id="answersArea">
		<div class="col-md-12"></div>
	</div>
</div>

<script type="text/javascript" src="./javascript/quizMaker.js"></script>