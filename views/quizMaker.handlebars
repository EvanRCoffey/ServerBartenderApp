<div id="mainDiv">
    <div class="row">
        <div class="col s12">
            <br><h4>Quiz Maker</h4>
        </div>
    </div>
</div>

<div class="container" id="triviaContainer">
	<div class="row" id="messageArea">
		<form class="col s12" id="shiftForm" method="POST" action="/checkMenuJSON">

			<div class="input-field col s12">

			    <select name="job_id" id="jobID" required>
			        <option value="" disabled>Click here to choose a job</option>
			        {{#each jobs}}
			            <option value="{{this.id}}" selected>{{this.job_name}}</option>
			        {{/each}}
			    </select>

			    <label>Job Selector</label>

			</div>

			<button class="btn waves-effect waves-light shiftSubmit" type="submit">Begin quiz maker</button>
		</form>
	</div>
	<div class="row" id="answersArea">
		<div class="col-md-12"></div>
	</div>
</div>

<script type="text/javascript" src="./javascript/quizMaker.js"></script>