<div id="mainDiv">
    <div class="row">
        <div class="row">
            <div class="col s12">
                <br><h4>Edit Shift</h4>
            </div>
        </div>
    
    <!--   need to modify the route/query so this updates the shift. -->
        <form class="col s12" method="POST" action="/updateShift">

            <!--totalWalkedWith DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="totalWalkedWith" id="totalWalkedWith" type="number" step="0.01" class="validate" value={{this.totalWalkedWith}}>
                <label for="totalWalkedWith" class="active">Total walked with</label>                                          
            </div>
        
            <!--largestTip DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="largestTip" id="largestTip" type="number" step="0.01" class="validate" value={{this.largestTip}}>
                <label for="largestTip" class="active">Largest tip</label>
            </div>

            <!--smallestTip DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="smallestTip" id="smallestTip" type="number" step="0.01" class="validate" value={{this.smallestTip}}>
                <label for="smallestTip" class="active">Smallest tip</label>
            </div>

            <!--stiffed INT(10)-->
            <div class="input-field col s12">
                <input name="stiffed" id="stiffed" type="number" class="validate" value={{this.stiffed}}>
                <label for="stiffed" class="active">Number of times stiffed (hopefully zero!)</label>
            </div>

            <!--sales DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="sales" id="sales" type="number" step="0.01" class="validate" value={{this.sales}}>
                <label for="sales" class="active">Sales</label>
            </div>

            <!--ppa DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="ppa" id="ppa" type="number" step="0.01" class="validate" value={{this.ppa}}>
                <label for="ppa" class="active">PPA</label>
            </div>

            <!--tipout DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="tipout" id="tipout" type="number" step="0.01" class="validate" value={{this.tipout}}>
                <label for="tipout" class="active">Total tipped out</label>
            </div>

            <!--tipPercent DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="tipPercent" id="tipPercent" type="number" step="0.01" class="validate" value={{this.tipPercent}}>
                <label for="tipPercent" class="active">Tip %</label>
            </div>

            <!--bwl DECIMAL(10,2)-->
            <div class="input-field col s12">
                <input name="bwl" id="bwl" type="number" step="0.01" class="validate" value={{this.bwl}}>
                <label for="bwl" class="active">BWL %</label>
            </div>

            <!--comments MEDIUMBLOB-->
            <div class="input-field col s12">
                <textarea name="comments" id="comments" class="materialize-textarea">{{this.comments}}</textarea>
                <label for="comments" class="active">Comments</label>
            </div>

            <!--breakthroughs MEDIUMBLOB-->
            <div class="input-field col s12">
                <textarea name="breakthroughs" id="breakthroughs" class="materialize-textarea">{{this.breakthroughs}}</textarea>
                <label for="breakthroughs" class="active">Breakthroughs</label>
            </div>

            <!--shiftDate DATE-->
            <div class="input-field col s12">
                <input name="shiftDate" id="shiftDate" type="date" class="datepicker" value={{this.shiftDate}}>
                <label for="shiftDate" class="active">Click here to select a date for this shift</label>
            </div>

            <!--timeIn TIMESTAMP NOT NULL-->
            <br><br><br><br>
            <input name="inTime" type="range" min="0" max="1425" value={{this.timeIn}} step="15" class="timeRun" id="inTime" oninput="showInTime(this.value)"/><br><span id="inTimeSpan">In-time: {{this.timeIn}} </span><br><br>

            <!--timeOut TIMESTAMP NOT NULL-->
            <input name="outTime" type="range" min="0" max="1425" value={{this.timeOut}} step="15" class="timeRun" id="outTime" oninput="showOutTime(this.value)"/><br><span id="outTimeSpan">Out-time: {{this.timeOut}}</span><br><br>

            <!--shiftType VARCHAR(32)-->
            <select name="shiftType" id="shiftType" value={{this.shiftType}}>
              <option value="" disabled selected>Click here to choose the shift type</option>
              <option value="breakfast">Breakfast</option>
              <option value="lunch">Lunch</option>
              <option value="dinner">Dinner</option>
              <option value="double">Double</option>
            </select>
            <label>Shift type</label>

             <input type="hidden" name="shiftID" value={{this.id}}>

            <button class="btn waves-effect waves-light" type="submit">Update Shift</button>

            <div class="row"></div>
        </form>

      <!--   need to modify the route/query so this deletes the shift. -->
         <form action="/deleteShift{{this.id}}?" method="POST"><button class="btn waves-effect waves-light" type="submit">Delete Shift</button></form>
    </div>
</div>

<script type="text/javascript" src="./javascript/shift.js"></script>