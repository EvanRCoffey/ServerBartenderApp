<div id="mainDiv">
    <div class="row container">
        <div class="row">
            <div class="col s12">
                <br>
                <h4>Menu Builder</h4>
            </div>
        </div>

        <div id="newOrLoadMenu" class="row">
            <div class="col s12">
                <!--New Menu Button-->
                
                <button class="btn waves-effect waves-light" onclick="prepareNewMenu()">Create a new menu</button>

                <!--Load Menu Button-->

                <button class="btn waves-effect waves-light" onclick="prepareLoadMenu()">Edit an existing menu</button>

            </div>
        </div>        

        <form class="col s12" id="menuForm" hidden>
            <h5 id="newOrOld">Creating a new menu</h4>
            <div id="dropdown">
                <div class="input-field col s12">
                    <select name="job_id" id="jobID" onchange="setHiddenJobField(this.value)" required>
                        <option value="" disabled selected>Click here to choose a job</option>
                        {{#each jobs}}
                        <option value="{{dataValues.id}}">{{dataValues.job_name}}</option>
                        {{/each}}
                    </select>
                    <label>Job Selector</label>
                </div>
            </div>

            <!--hidden job id element-->
            <input type="hidden" id='jobIdPopulate' name="jobIdPopulate">

            <!--hidden menu id element-->
            <input type="hidden" id='menuIdPopulate' name="menuIdPopulate">

            <div class="col s12 menuFormHolder" id="hiddenMenuForm" hidden>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="menuName" type="text" required class="validate" name="menuName">
                        <label for="menuName" id="menuNameLabel">Menu Name</label>
                    </div>
                    <div class="input-field col s12">
                        <textarea name="comments" id="comments" class="materialize-textarea"></textarea>
                        <label for="comments" id="commentsLabel">Comments</label>
                    </div>
                    <div class="input-field col s12 CRIpanel">
                        <ul class="collapsible" data-collapsible="expandable">
                            <li>
                                <div class="collapsible-header">
                                    <h4 class="CRIheader">Commonly Requested Items</h4>
                                </div>
                                <div class="collapsible-body menuOverflow CRI"></div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </form> 

    </div>

    <div class="row container" id="hiddenCategories" hidden>
        <div class="input-field col s12">
            <select class="categorySelector" onchange="addCategory(this);">
                <option value="" disabled selected>Add Menu Category</option>
                <optgroup label="Food">
                    <option value="entree">Entrees</option>
                    <option value="appetizer">Appetizers</option>
                    <option value="dessert">Desserts</option>
                    <option value="sides">Sides</option>
                    <option value="addOn">Add-Ons</option>
                    <option value="soupOrSalad">Soups and Salads</option>
                    <option value="kidsMenu">Kids Menu</option>
                    <option value="otherFood">Other Food</option>
                </optgroup>
                <optgroup label="Drink">
                    <option value="wine">Wine</option>
                    <option value="beer">Beer</option>
                    <option value="cocktails">Cocktails</option>
                    <option value="nonAlcoholic">Non-Alcoholic</option>
                    <option value="afterDinnerDrink">After Dinner Drinks</option>
                    <option value="otherDrink">Other Drinks</option>
                </optgroup>
            </select>
            <label>Create new Menu Category.</label>
        </div>
    </div>
</div>

<script type="text/javascript" src="./javascript/menuBuilder.js"></script>