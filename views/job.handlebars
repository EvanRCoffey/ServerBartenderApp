<div id="mainDiv">
    <br><h4>Fill out this form to create a new job</h4>
    <form method="POST" action="/newJob">

        <div class="input-field">
            <input id="job_name" type="text" class="validate" name="job_name" required>
            <label for="job_name">Job Name</label>
        </div>

        <!--startDate DATE-->
        <div class="input-field">
            <input name="startDate" id="startDate" type="date" class="datepicker" required>
            <label for="startDate">Click here to select a start date for this job</label>
        </div>

        <!--endDate DATE-->
        <div class="input-field">
            <input name="endDate" id="endDate" type="date" class="datepicker">
            <label for="endDate">End Date (Leave blank if still there)</label>
        </div>

        <!--wage DECIMAL(10,2)-->
        <div class="input-field">
            <input name="wage" id="wage" type="number" step="0.01" class="validate" required>
            <label for="wage">Hourly wage</label>
        </div>
    
        <!--userJobMenu JSON would go here-->

        <!--comments MEDIUMBLOB-->
        <div class="input-field">
            <textarea name="comments" id="comments"></textarea>
            <label for="comments">Comments</label>
        </div>

        <button class="btn waves-effect waves-light">Create New Job</button>
        
    </form>
</div>

<script type="text/javascript" src="./javascript/job.js"></script>

