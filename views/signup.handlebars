<h4>Sign up</h4>

<form method="POST" action="/newUser" onsubmit="return validateForm()" >

    <div class="input-field">
        <input id="first_name" type="text" required class="validate" name="user_name">
        <label for="first_name">First Name</label>
    </div>

    <div class="input-field">
        <input id="email" type="email" class="validate" required name="user_email">
        <label for="email">Email</label>
    </div>

    <div class="input-field">
        <input id="password" type="password" class="validate" required name="user_password">
        <label for="password">Password</label>
    </div>

    <div class="input-field">
        <input id="passwordCheck" type="password" required class="validate">
        <label for="password">Re-enter Password</label>
    </div>

    <button class="btn signUpSubmitBtn" type="submit">Sign Up</button>
</form>

<script type="text/javascript" src="./javascript/signup.js"></script>